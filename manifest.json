{
  "manifest_version": 2,
  "name": "Web Video Labeler",
  "version": "0.1.0",
  "description": "Label videos on the web for training machine learning systems",
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["dist/extension/injectScript.js"],
    "all_frames": true
  }],
  "permissions": ["management", "downloads"],
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://*.youtube.com/*"]
  },
  "background": {
    "scripts": [
      "dist/extension/liveReload.js",
      "dist/extension/messageListener.js"
    ]
  },
  "web_accessible_resources": [
    "dist/bundle.js",
    "dist/bundle.js.map",
    "dist/bundle.css"
  ]
}
