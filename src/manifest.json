{
  "manifest_version": 2,
  "name": "Web Video Labeler",
  "version": "1.0.0",
  "description": "Label videos on the web for training image classifiers",
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["extension/injectScript.js"],
    "all_frames": true
  }],
  "permissions": ["management", "downloads"],
  "background": {
    "scripts": [
      "extension/liveReload.js",
      "extension/messageListener.js"
    ]
  },
  "web_accessible_resources": [
    "bundle.js",
    "bundle.js.map",
    "bundle.css"
  ]
}
