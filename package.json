{
  "name": "typescript-chrome-extension-base",
  "version": "1.0.0",
  "description": "Base project for developing a Chrome extension in Typescript",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist/*",
    "rollup": "rollup -c",
    "tsc": "tsc -p tsconfig.json",
    "start": "concurrently \"npm run rollup -- --watch\" \"npm run tsc -- -w\"",
    "build": "npm run clean && npm run tsc && npm run rollup"
  },
  "author": "Dan Rouse <dan@rouse.house>",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "0.0.73",
    "@types/jszip": "^3.1.4",
    "@types/react": "^16.7.17",
    "@types/react-dom": "^16.0.11",
    "hasha": "^3.0.0",
    "rich-logger-decorator": "^4.0.0",
    "rimraf": "^2.6.2",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "concurrently": "^4.0.1",
    "jszip": "^3.1.5",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rollup": "^0.65.2"
  }
}
